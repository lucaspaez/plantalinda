# =========================================
# Cannabis App - Environment Variables
# =========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# -----------------------------------------
# Database Configuration
# -----------------------------------------
DB_URL=jdbc:postgresql://localhost:5432/cannabis_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10

# -----------------------------------------
# JWT Configuration
# -----------------------------------------
# IMPORTANT: Generate a secure secret for production!
# Run: openssl rand -hex 64
JWT_SECRET=your_64_character_hex_secret_here
JWT_EXPIRATION=86400000

# -----------------------------------------
# Server Configuration
# -----------------------------------------
SERVER_PORT=8081
DDL_AUTO=update
# Use 'validate' for production, 'update' for development

# -----------------------------------------
# AI Service Configuration
# -----------------------------------------
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your_ai_service_api_key_here

# -----------------------------------------
# Logging
# -----------------------------------------
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN

# -----------------------------------------
# Spring Profile (optional)
# -----------------------------------------
# SPRING_PROFILES_ACTIVE=prod
